<div class="border-bottom px-3 py-2 d-flex align-items-center justify-content-between bg-light">
    <div class="d-flex align-items-center gap-3">
        @* <div class="form-check mb-0">
            <input class="form-check-input" type="checkbox" id="selectAll" disabled>
        </div> *@
        @* <button class="btn btn-sm btn-light border-0" @onclick="OnRefresh" title="Atualizar"><i class="bi bi-arrow-clockwise"></i></button> *@
        @* <div class="vr mx-1"></div> *@
        <span class="text-muted small">@Subtitulo</span>
    </div>
    <div class="d-flex align-items-center gap-1">
        <button class="btn btn-sm btn-light" disabled="@(Pagina == 1)" @onclick="OnPreviousPage"><i class="bi bi-chevron-left"></i></button>
        <button class="btn btn-sm btn-light" disabled="@(Pagina == UltimaPagina)" @onclick="OnNextPage"><i class="bi bi-chevron-right"></i></button>
    </div>
</div>

@code {
    [Parameter] public string Subtitulo { get; set; } = "0 de 0";
    [Parameter] public int Pagina { get; set; }
    [Parameter] public int UltimaPagina { get; set; }
    [Parameter] public EventCallback OnRefresh { get; set; }
    [Parameter] public EventCallback OnPreviousPage { get; set; }
    [Parameter] public EventCallback OnNextPage { get; set; }
}
